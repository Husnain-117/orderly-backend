# Server environment
PORT=4000
CORS_ORIGIN=http://localhost:5173

# SMTP (use your provider or Gmail SMTP for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="Oderly <your@gmail.com>"

# Optional: customize email subject/body. Use {{otp}} and {{minutes}} placeholders.
# SMTP_SUBJECT=Your verification code
# SMTP_TEXT_TEMPLATE=Your verification code is {{otp}}. It expires in {{minutes}} minutes.
# SMTP_HTML_TEMPLATE=<p>Your verification code is <b>{{otp}}</b>. It expires in {{minutes}} minutes.</p>

# OTP expiry in minutes
OTP_EXPIRES_MINUTES=10

# JWT secret for signing session cookies
JWT_SECRET=change_this_in_prod
